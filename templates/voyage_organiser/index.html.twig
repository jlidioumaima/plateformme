{% extends 'base.html.twig' %}
{% block style %}{% endblock %}
{% block titlepage %}VoyageOrganiser index{% endblock %}

{% block script %}

	<script src="{{ asset('admin/global_assets/js/plugins/tables/datatables/datatables.min.js') }}"> </script>
	<script src="{{ asset('admin/global_assets/js/demo_pages/datatables_basic.js') }}"> </script>   
{% endblock %}

{% block content %}

   <div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color: #007682b5;" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Liste des VoyageOrganisers</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:190px" href="{{ path('app_voyage_organiser_new') }}"><i class="icon-user-plus"></i> Ajouter VoyageOrganiser</a>
	                	</div>
                           </div>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr>
               
                <th>Titre</th>
                
                <th>Hotel</th>
                <th>Pays</th>
                <th>Agence de Voyage</th>
                <th colspan="2"><center>Images</center></th>
                <th colspan="3"><center>actions</center></th>
            </tr>
        </thead>
        <tbody>
        {% for voyage_organiser in voyage_organisers %}
            <tr>
               
                <td>{{ voyage_organiser.titre }}</td>
         
                <td>{{ voyage_organiser.hotel }}</td>
               {% for voyage_organiser in voyage_organiser.pays %}
                   <td>{{ voyage_organiser.nom}}</td>
                  {% endfor %}
                <td>{{ voyage_organiser.agence.nom }}</td>
       
               <td colspan="2">
                 <center>
                {% for image in voyage_organiser.images|slice(0, 1) %}
               <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="100">
                      
        {% endfor %}
       </center>
               </td>
             
                <td colspan="3">
                <center>
                   <a class="btn edit btn-info"  href="{{ path('app_voyage_organiser_show', {'id': voyage_organiser.id}) }}"style="width:40px"><i class="icon-eye2"></i></a>
                     <a class="btn edit btn-warning"  href="{{ path('app_voyage_organiser_edit', {'id': voyage_organiser.id}) }}"style="width:40px"><i class="icon-pencil"></i></a>
                    {{ include('voyage_organiser/_delete_form.html.twig') }}
                   </center>
            </td>
            </tr>
               
      
       {% endfor %} 
        </tbody>
         
    </table>

</div>
    </div>
    </div>


  
  <div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color: #007682b5;" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Liste des VoyageExcursions</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:190px" href="{{ path('app_voyage_excursion_new') }}"><i class="icon-user-plus"></i> Ajouter VoyageExcursion</a>
	                	</div>
                           </div>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Prix</th>
                <th colspan="2"><center>Images</center></th>
                <th colspan="3"><center>actions</center></th>
            </tr>
        </thead>
        <tbody>
        {% for voyage_excursion in voyage_excursions %}
            <tr>
                <td>{{ voyage_excursion.id }}</td>
                <td>{{ voyage_excursion.type }}</td>
                <td>{{ voyage_excursion.prix }}</td>
                 <td colspan="2">
                 <center>
                {% for image in voyage_excursion.images|slice(0, 1) %}
               <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="100">
                      
       {% endfor %}
       </center>
               </td>
             
                <td colspan="3">
                <center>
                    <a href="{{ path('app_voyage_excursion_show', {'id': voyage_excursion.id}) }}">show</a>
                    <a href="{{ path('app_voyage_excursion_edit', {'id': voyage_excursion.id}) }}">edit</a>
                </center>
            </td>
            </tr>
               
      
       {% endfor %} 
        </tbody>
         
    </table>

  

    
{% endblock %}




